@model Comp2139Lab1.Areas.ProjectManagement.Models.Project

@{
    ViewData["Title"] = "Delete Project";
}

<div class="container">
    <h1 class="mt-4 mb-4 text-danger">Delete Project</h1>
    
    <div class="alert alert-danger">
        <h4><i class="fas fa-exclamation-triangle"></i> Warning!</h4>
        <p>Are you sure you want to delete this project? This action cannot be undone and will also delete all tasks associated with this project.</p>
    </div>
    
    <div class="card mb-4">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Project Details</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
                
                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@(Model.Description ?? "No description available")</dd>
                
                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.Status == "Completed" ? "bg-success" : 
                                       Model.Status == "In Progress" ? "bg-warning" : 
                                       "bg-info")">
                        @Model.Status
                    </span>
                </dd>
                
                <dt class="col-sm-3">Start Date</dt>
                <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>
                
                <dt class="col-sm-3">End Date</dt>
                <dd class="col-sm-9">@Model.EndDate.ToShortDateString()</dd>
                
                <dt class="col-sm-3">Task Count</dt>
                <dd class="col-sm-9">@Model.Tasks.Count</dd>
            </dl>
        </div>
    </div>
    
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex">
            <button type="submit" class="btn btn-danger me-2">
                <i class="fas fa-trash"></i> Confirm Delete
            </button>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary me-2">
                <i class="fas fa-arrow-left"></i> Back to Details
            </a>
            <a asp-action="Index" class="btn btn-outline-dark">
                <i class="fas fa-list"></i> Back to List
            </a>
        </div>
    </form>
</div> 