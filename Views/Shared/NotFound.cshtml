@{
    ViewData["Title"] = "Page Not Found";
}

<div class="text-center mt-5">
    <div class="display-1 text-danger">404</div>
    <h1 class="display-4 mb-4">Page Not Found</h1>
    <p class="lead">Sorry, the page you are looking for does not exist or has been moved.</p>
    <hr class="my-4">
    <p>It looks like you may have taken a wrong turn. Let's get you back on track.</p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg mt-3">
        <i class="fas fa-home me-2"></i> Back to Home
    </a>
</div> 